extends ../../../web_includes/common/layout

block includes
  include ../../../web_includes/common/common_includes.pug

block header
        i.fa-fw.fa.fa-signal
        | Radio Control Input

block main
  .row.row-fluid
    article.col-xs-10.col-sm-8.col-md-6.col-lg-6(style='max-width:450px')
      #wid-RCIN-Application.jarviswidget.jarviswidget-color-blueDark(data-widget-editbutton='false')
        header
          span.widget-icon
            i.fa.fa-table
          h2 Housekeeping
        div
          .jarviswidget-editbox
            input.form-control(type='text')
          .widget-body
            .table-responsive
              table.table.table-condensed
                tbody
                  tr
                    th Cmd Count
                    td
                      span(data-sage={tlm: [{name:'/CFS/RCIN/CmdCounter'}]}) ---
                  tr
                    th Error Count
                    td
                      span(data-sage={tlm: [{name:'/CFS/RCIN/ErrCounter'}]}) ---
                  tr
                    th State
                    td
                      span(data-sage={tlm: [{name:'/CFS/RCIN/State'}]}) ---
            footer
              button.btn.btn-primary(data-sage={cmd: {name:'/CFS/RCIN/NoOp'}}) No-Op
              button.btn.btn-primary(data-sage={cmd: {name:'/CFS/RCIN/Reset'}}) Reset

  .row
    +app_specific_telemetry_control("RCIN")

  .row
    +app_specific_mempools("RCIN")
    
  .row
    +app_specific_application_control("RCIN") 
    +registered_applications() 
  
  .row
    +app_specific_table_control("RCIN")
    
  .row
    +app_specific_scheduler_control("RCIN")
