.row.os-theme-dark
  article.col-xs-12.col-sm-12
    header
      span.widget-icon
        i.fa.fa-table
      h2 RGBLED - Command and Data Handling
    div.widget-body.table-responsive
      table.table.table-condensed
        tbody
          tr
            th Cmd Count
            td
              div(data-cdr={tlm:[{name:'/RGBLED/RGBLED_HkTlm_t/usCmdCnt'}],indicator:'text'}) ---
          tr
            th Error Count
            td
              div(data-cdr={tlm:[{name:'/RGBLED/RGBLED_HkTlm_t/usCmdErrCnt'}],indicator:'text'}) ---
          tr
            th Color
            td
              div(data-cdr={tlm:[{name:'/RGBLED/RGBLED_HkTlm_t/Color', calibration:{ type:'enumeration',
              enumerations:[
              { value: 0, name:'OFF'},
              { value: 1, name:'RED'},
              { value: 2, name:'GREEN'},
              { value: 3, name:'BLUE'},
              { value: 4, name:'AMBER'},
              { value: 5, name:'YELLOW'},
              { value: 6, name:'PURPLE'},
              { value: 7, name:'CYAN'},
              { value: 8, name:'WHITE'}
              ]}}],indicator:'text'}) ---
          tr
            th State
            td
              div(data-cdr={tlm:[{name:'/RGBLED/RGBLED_HkTlm_t/State', calibration:{ type:'enumeration',
              enumerations:[
              { value: 0, name:'UNINITIALIZED'},
              { value: 1, name:'INITIALIZED'},
              { value: 2, name:'ON'},
              { value: 3, name:'SELFTEST'}
              ]}}],indicator:'text'}) ---
    footer.btn-group(role="group")      
      button.btn.cdr-outline-primary(data-cdr={cmd:{name:'/RGBLED/Noop'},indicator:'cmd'}) No-Op    
      button.btn.cdr-outline-primary(data-cdr={cmd:{name:'/RGBLED/Reset'},indicator:'cmd'}) Reset
