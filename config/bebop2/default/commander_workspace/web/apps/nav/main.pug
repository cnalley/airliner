extends ../../../web_includes/common/layout

block includes
  include ../../../web_includes/common/common_includes.pug

block header
        i.fa-fw.fa.fa-signal
        | Navigator

block main
  .row
    article.col-xs-12.col-sm-12.col-md-6.col-lg-4
      #wid-NAV-CmdAndData.jarviswidget.jarviswidget-color-blueDark(data-widget-editbutton='false')
        header
          span.widget-icon
            i.fa.fa-table
          h2 Command and Data Handling
        div
          .jarviswidget-editbox
            input.form-control(type='text')
          .widget-body
            .table-responsive
              table.table.table-condensed
                tbody
                  tr
                    th Cmd Count
                    td
                      span.sage-tlm(data-sage={tlm:[{name:'/CFS/NAV/CmdCounter'}]}) ---
                  tr
                    th Error Count
                    td
                      span(data-sage={tlm:[{name:'/CFS/NAV/ErrCounter'}]}) ---
            footer
              button.btn.btn-primary(data-sage={cmd:{name:'/CFS/NAV/NoOp'}}) No-Op
              button.btn.btn-primary(data-sage={cmd:{name:'/CFS/NAV/Reset'}}) Reset

    article.col-xs-12.col-sm-12.col-md-6.col-lg-4
      #wid-LD-CmdAndData.jarviswidget.jarviswidget-color-blueDark(data-widget-editbutton='false')
        header
          span.widget-icon
            i.fa.fa-table
          h2 Current Mission Status
        div
          .jarviswidget-editbox
            input.form-control(type='text')
          .widget-body
            .table-responsive
              table.table.table-condensed
                tbody
                  tr
                    th Completed Mission Item
                    td
                      div.bool-led(data-sage={tlm:[{name:'/CFS/NAV/MissionItemReached'}]})
                  tr
                    th Reached Waypoint Position
                    td
                      div.bool-led(data-sage={tlm:[{name:'/CFS/NAV/WaypointPositionReached'}]})
                  tr
                    th Reached Waypoint Yaw
                    td
                      div.bool-led(data-sage={tlm:[{name:'/CFS/NAV/WaypointYawReached'}]})

  .row
    article.col-xs-12.col-sm-12.col-md-6.col-lg-4
      #wid-LD-CmdAndData.jarviswidget.jarviswidget-color-blueDark(data-widget-editbutton='false')
        header
          span.widget-icon
            i.fa.fa-table
          h2 RTL Status
        div
          .jarviswidget-editbox
            input.form-control(type='text')
          .widget-body
            .table-responsive
              table.table.table-condensed
                tbody
                  tr
                    th RTL State
                    td
                      span.sage-tlm(data-sage={tlm:[{name:'/CFS/NAV/RtlState'}]})
                  tr
                    th Force Descent Active
                    td
                      div.bool-led(data-sage={tlm:[{name:'/CFS/NAV/RtlForceDescentExecuting'}]})
                  tr
                    th Force Descent Completed
                    td
                      div.bool-led(data-sage={tlm:[{name:'/CFS/NAV/RtlForceDescentCompleted'}]})

    article.col-xs-12.col-sm-12.col-md-6.col-lg-4
      #wid-LD-CmdAndData.jarviswidget.jarviswidget-color-blueDark(data-widget-editbutton='false')
        header
          span.widget-icon
            i.fa.fa-table
          h2 Auto Land Status
        div
          .jarviswidget-editbox
            input.form-control(type='text')
          .widget-body
            .table-responsive
              table.table.table-condensed
                tbody
                  tr
                    th Force Descent Active
                    td
                      div.bool-led(data-sage={tlm:[{name:'/CFS/NAV/LandForceDescentExecuting'}]})
                  tr
                    th Force Descent Completed
                    td
                      div.bool-led(data-sage={tlm:[{name:'/CFS/NAV/LandForceDescentCompleted'}]})

                                        
  .row
    +app_specific_telemetry_control("NAV")
                                                  
  .row          
    +app_specific_mempools("NAV")
    
  .row
    +app_specific_application_control("NAV") 
    +registered_applications() 
  
  .row
    +app_specific_table_control("NAV")
    
  .row
    +app_specific_scheduler_control("NAV")
