.row.os-theme-dark
  article.col-xs-12.col-sm-12
    header
      span.widget-icon
        i.fa.fa-table
      h2 CI - Housekeeping
    div.widget-body.table-responsive
      table.table.table-condensed
        tbody
          tr
            th Cmd Count
            td
              div(data-cdr={tlm:[{name:'/CI/CI_HkTlm_t/usCmdCnt'}],indicator:'text'}) ---
          tr
            th Error Count
            td
              div(data-cdr={tlm:[{name:'/CI/CI_HkTlm_t/usCmdErrCnt'}],indicator:'text'}) ---
          tr
            th Ingest Message Count
            td
              div(data-cdr={tlm:[{name:'/CI/CI_HkTlm_t/IngestMsgCount'}],indicator:'text'}) ---
          tr
            th Ingest Error Count
            td
              div(data-cdr={tlm:[{name:'/CI/CI_HkTlm_t/IngestErrorCount'}],indicator:'text'}) ---
              
    footer.btn-group(role="group")      
      button.btn.cdr-outline-primary(data-cdr={cmd:{name:'/CI/Noop'},indicator:'cmd'}) No-Op    
      button.btn.cdr-outline-primary(data-cdr={cmd:{name:'/CI/Reset'},indicator:'cmd'}) Reset
