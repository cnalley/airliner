                    tr
                      th Output 6
                      td
                        span(data-sage={tlm: [{name:'/CFS/AMC/Output_6'}]}) ---
                    tr
                      th Output 7
                      td
                        span(data-sage={tlm: [{name:'/CFS/AMC/Output_7'}]}) ---
                    tr
                      th Output 8
                      td
                        span(data-sage={tlm: [{name:'/CFS/AMC/Output_8'}]}) ---
                    tr
                      th Output 9
