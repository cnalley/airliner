.row.os-theme-dark
  article.col-xs-12.col-sm-12
    header
      span.widget-icon
        i.fa.fa-table
      h2 RCIN - Command and Data Handling
    div.widget-body.table-responsive
      table.table.table-condensed
        tbody
          tr
            th Cmd Count
            td
              div(data-cdr={tlm:[{name:'/RCIN/RCIN_HkTlm_t/usCmdCnt'}],indicator:'text'}) ---
          tr
            th Error Count
            td
              div(data-cdr={tlm:[{name:'/RCIN/RCIN_HkTlm_t/usCmdErrCnt'}],indicator:'text'}) ---
          tr
            th State
            td
              div(data-cdr={tlm:[{name:'/RCIN/RCIN_HkTlm_t/State', calibration:{ type:'enumeration',
              enumerations:[
              { value: 0, name:'UNINITIALIZED'},
              { value: 1, name:'INITIALIZED'},
              { value: 2, name:'NOT_PUBLISHING'},
              { value: 3, name:'PUBLISHING'}
              ]}}],indicator:'text'}) ---
    footer.btn-group(role="group")      
      button.btn.cdr-outline-primary(data-cdr={cmd:{name:'/RCIN/Noop'},indicator:'cmd'}) No-Op    
      button.btn.cdr-outline-primary(data-cdr={cmd:{name:'/RCIN/Reset'},indicator:'cmd'}) Reset
